    </a>
    
    <Navigation />
  </div>
</header>

<script>
  // Cammbio color y tamano del navbar on scroll
  const navbar = document.getElementById('nav');
  const logo = document.getElementById('logo');
  const paddingTarget = navbar ? navbar.querySelector('div') : null; 

  window.addEventListener('scroll', () => {
    if (!navbar || !paddingTarget || !logo) return;
    if (window.scrollY > 30) {
      paddingTarget.classList.remove('py-6');
      paddingTarget.classList.add('py-3');
      navbar.classList.remove('bg-white/1');
      navbar.classList.add('bg-white/90');
      logo.classList.add('h-10', 'w-auto');
      logo.classList.remove('h-12', 'w-auto');
    } else {
      paddingTarget.classList.remove('py-3');
      paddingTarget.classList.add('py-6');
      navbar.classList.remove('bg-white/90');
      navbar.classList.add('bg-white/1');
      logo.classList.remove('h-10', 'w-auto');
      logo.classList.add('h-12', 'w-auto');
    }
  });
</script>