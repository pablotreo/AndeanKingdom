const testimonials = [
  { name: "John Perez", text: "Excellent service, highly recommendable. Ut et sint aliquip ea sit duis enim in in proident culpa nisi culpa.", link: "https://example.com/testimonial1" },
  { name: "Ana Garcia", text: "I loved the experience, I'll definitely return. Commodo sit et sit nisi ex irure quis minim.", link: "https://example.com/testimonial2" },
  { name: "Carlos Lopez", text: "Incredible service, the best place. Incredible service, the best place. Incredible service, the best place. Incredible service, the best place. Incredible service, the best place.", link: "https://example.com/testimonial3" },
  { name: "Laura Martinez", text: "An unforgettable experience, 100% recommendable.", link: "https://example.com/testimonial4" },
  { name: "David Gonzalez", text: "The best in town, first-class attention. Eu culpa enim veniam mollit.Eiusmod nisi duis irure aliqua officia anim.", link: "https://example.com/testimonial5" },
  { name: "Sofia Rodriguez", text: "Impressive quality. I'll definitely come back.", link: "https://example.com/testimonial6" },
];
---

<div class="max-w-6xl mx-auto py-12">
  <!-- Title and Subtitle in English -->
  <h2 class="text-4xl font-bold text-center mb-4">What Our Customers Say</h2>
  <p class="text-xl text-center mb-12">Discover why people trust us with their experiences</p>
  
  <!-- Testimonials in a single container for animation -->
  <div id="testimonialsContainer" class="relative overflow-hidden">
    <div id="testimonialGroup" class="flex">
      <!-- All Testimonials in a single container -->
      {testimonials.map((testimonial, index) => (
        <div
          class="bg-white p-6 rounded-lg w-1/3 flex-shrink-0 transform transition-all duration-700 mx-4 my-4 border border-gray-300"
        >
          <p class="text-lg text-gray-700 mb-4">
            "{testimonial.text}" 
            <a href={testimonial.link} target="_blank" class="text-color-secondary hover:underline">Read more</a>
          </p>
          <p class="font-semibold text-gray-900 text-right">- {testimonial.name}</p>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  #testimonialsContainer {
    width: 100%;
  }

  #testimonialGroup {
    display: flex;
    animation: slideLeft 20s linear infinite;
  }

  /* Continuous sliding animation to the left */
  @keyframes slideLeft {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Pause animation on hover */
  #testimonialsContainer:hover #testimonialGroup {
    animation-play-state: paused;
  }

  /* Resume animation when mouse leaves */
  #testimonialsContainer:not(:hover) #testimonialGroup {
    animation-play-state: running;
  }
</style>
