---
const { text = "", href = "" } = Astro.props;
---

<a href={href} class="inline-flex items-center space-x-3 group transition-colors duration-300 text-gray-600 hover:text-orange-500">
  <div class="w-9 h-9 rounded-full border-2 border-orange-500 shadow-md flex items-center justify-center transition-colors duration-300 group-hover:bg-orange-500">
    <svg
      class="w-5 h-5 text-orange-500 transform transition-all duration-300 group-hover:text-white"
      fill="none"
      stroke="currentColor"
      stroke-width="3"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
  </div>
  <span class="transition-colors duration-300 text-lg">{text}</span>
</a>