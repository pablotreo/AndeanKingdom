              <Button href='/trekking' variant='outline'>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  class='w-4 h-4 mr-2 shrink-0'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke='currentColor'
                  aria-hidden='true'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M15 19l-7-7 7-7'></path>
